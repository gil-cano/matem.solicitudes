    <metal:define define-macro="course_edit">
      <table class="coursewidget-table-edit"
        tal:attributes="id python: 'coursewidget-table-' + field.getName()"
        style="width: 100%"
        tal:define="fielddata python: value or field.getEditAccessor(context)();">
        <tbody tal:attributes="id python: 'coursewidget-tbody-' + field.getName()">
          <tal:row-loop tal:repeat="rows fielddata" tal:define="newRow python: False">
            <tal:row metal:use-macro="here/edit_row/macros/edit_row"/>
          </tal:row-loop>
        </tbody>
      </table>
      <a class="coursewidget-add-button"
        id="coursewidget-add-button"
        i18n:translate="label_coursewidget_add_new_row"
        tal:attributes='onclick python: "CourseFieldFunctions.addRow(\"" + field.getName() + "\")"'>
        Add new row
      </a>
