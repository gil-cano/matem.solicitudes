             title="Comenzar a aceptar solicitudes"
             new_state="aceptando" trigger="USER"
             before_script="" after_script=""> 
  <action url="%(content_url)s/content_status_modify?workflow_action=aceptar"
          category="workflow">Comenzar a aceptar solicitudes</action> 
  <guard> 
   <guard-role>Manager</guard-role> 
  </guard> 
 </transition>
 <transition transition_id="noaceptar"
             title="Dejar de aceptar solicitudes"
             new_state="noaceptando" trigger="USER"
             before_script="" after_script=""> 
  <action url="%(content_url)s/content_status_modify?workflow_action=noaceptar"
          category="workflow">Dejar de aceptar solicitudes</action> 
  <guard> 
   <guard-role>Manager</guard-role> 
  </guard>
 </transition> 
 <transition transition_id="archivar"
             title="Archivar"
             new_state="historico" trigger="USER"
             before_script="" after_script="registrar_valor"> 
  <action url="%(content_url)s/content_status_modify?workflow_action=archivar"
